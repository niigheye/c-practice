#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "rus"); //для вывода на русском
    int hour, min; //заводим переменные для часов и минут
    const char* h, * m, * s; //сохраняем слова для обозначения часов, минут, времени суток

    cout << "Введите часы и минуты" << endl; //cout со стрелками позволяет вывести на экран
    cin >> hour >> min;//cin считывает введенные данные и присваивает переменным их значение
    if ((hour == 0) && (min == 0)) { cout << "Полночь"; return 0; }//&- и,|| -или
    else if ((hour == 12) && (min == 0)) {
        cout << "Полдень"; return 0;
    }

    else {
        while ((hour > 23) || (hour < 0)) //проверяем на наличие ошибок в часах
        {
            cout << "Введи часы правильно(1-23)" << endl;
            cin >> hour; //сохраняем часы
        }
        while ((min > 59) || (min < 0)) //проверяем на наличие ошибок в минутах
        {
            cout << "Введи минуты правильно(1-59)" << endl;
            cin >> min; //сохраняем минуты
        }

    }
    if (((hour >= 0 && hour <= 4)))
    {
        s = "ночи";
    } //определяем время суток
    else if (hour >= 5 && hour <= 11) { s = "утра"; }
    else if ((hour >= 12) && (hour <= 17)) {
        s = "дня"; //определяем время суток
    }
    else { s = "вечера"; } //определяем время суток

    if (hour > 12) { hour = hour - 12; }
    if ((hour == 1)) { h = "час"; } //определяем падеж часов
    else if (((hour >= 2) && (hour <= 4))) { h = "часa"; }
    else { h = "часов"; } //определяем падеж часов
    if ((min >= 5) && (min <= 20)) { m = "минут"; } //определяем падеж минут
    else {
        switch (min % 10) {
        case 1: m = " минута"; break; case 2: m = " минуты"; break; case 3: m = " минуты"; break; case 4: m = " минуты"; break;
        default: m = " минут"; //определяем падеж минут
        }
    }
    if (!min) { cout << hour << " " << h << " " << s << " " << "ровно" << "\n"; }
    else { cout << hour << " " << h << " " << min << " " << m << " " << s << "\n"; } //вывод результатов
    return 0;
}

